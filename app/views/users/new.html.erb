<div class="container">
  <h1>Sign up</h1>
  <%= simple_form_for(@user) do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, "Go", class: "btn-primary" %>
  <% end %>
  <p class="center"><%= link_to "Already have an account? Sign in!", login_path %></p>
</div>